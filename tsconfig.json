{
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "target": "ES6",
    "module": "esnext",
    "jsx": "react-jsx",
    "rootDir": "src",
    "outDir": "docs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src/**/*", "**/*.test.tsx"],
}